<?xml version='1.0' encoding='UTF-8'?>
<openerp>
  <data>

    <record id="view_project_contract_validations_form" model="ir.ui.view">
            <field name="name">project.contract.validations</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@string='Close Project']" position='attributes'>
                    <attribute name="confirm">Please contact the account manager of this project in order to close the sale contract too!</attribute>
                </xpath>
            </field>
    </record>

</data>
</openerp>
