<?xml version='1.0' encoding='utf-8'?>
<openerp>
    <data>
<!--
    Deleting the field from the parent account move view
-->
        <record id="account_remove_account_move_amount_field" model="ir.ui.view">
            <field name="name">account.remove.account.move.amount.field.tree</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/><!--view_move_line_form2-->
            <field name="arch" type="xml">
            <xpath expr="//page[@string='Journal Items']/field[@name='line_id']/tree/field[@name='debit']" position="replace">
                <field name="debit"/>
            </xpath>
            <xpath expr="//page[@string='Journal Items']/field[@name='line_id']/tree/field[@name='credit']" position="replace">
                <field name="credit"/>
            </xpath>
            </field>
        </record>

    
    </data>
</openerp>
