<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Work Order Stages -->

        <record id="wo_draft" model="mrp.workorder.stage">
            <field name="sequence">1</field>
            <field name="name">New</field>
            <field name="state">draft</field>
        </record>

        <record id="wo_pause" model="mrp.workorder.stage">
            <field name="sequence">2</field>
            <field name="name">Pending</field>
            <field name="state">pause</field>
        </record>

        <record id="wo_startworking" model="mrp.workorder.stage">
            <field name="sequence">3</field>
            <field name="name">In Progress</field>
            <field name="state">startworking</field>
        </record>

        <record id="wo_done" model="mrp.workorder.stage">
            <field name="sequence">4</field>
            <field name="name">Finished</field>
            <field name="state">done</field>
        </record>

        <record id="wo_cancel" model="mrp.workorder.stage">
            <field name="sequence">5</field>
            <field name="name">Cancelled</field>
            <field name="state">cancel</field>
            <field name="fold">True</field>
        </record>

    </data>
</openerp>
