<?xml version='1.0' encoding='utf-8'?>
<openerp>
    <data>

        <record model="ir.ui.view" id="view_mrp_production_planified_inherit2">
            <field name="name">view.mrp.production.planified.inherit2</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">
                    <xpath expr="//field[@name='product_lines']" position="after">
            <field name="pt_planified_ids" nolabel="1">
                <tree string="Products Finished Good Planified">
                    <field name="product_id"/>
                    <field name="quantity"/>
                    <field name="product_uom"/>
                </tree>
                <form string="Products Finished Good Planified" version="7.0">
                    <field name="product_id" on_change="on_change_product_uom(product_id)"/>
                    <field name="quantity"/>
                    <field name="product_uom"/>
                </form>
            </field>
                    </xpath>
        </field>
        </record>


    </data>
</openerp>